<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="luchclient.Views.MainPage"
             Title="{Binding Title}">


        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Meet, Snack, Go!" />
        <Button Text="Create a group" Command="{Binding NavigateCreateGroupCommand}"></Button>
        <Button Text="Select a group" Command="{Binding NavigateSelectGroupCommand}"></Button>
        <Button Text="View votes" Command="{Binding NavigateViewVotesCommand}"></Button>
    </StackLayout>

</ContentPage>